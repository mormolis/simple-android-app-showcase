<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gr.glab.ypologismosmoriondiakrotima.GelAnth"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Αρχαία"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="77dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ιστορία"
        android:id="@+id/textView2"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Έκθεση"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="27dp" />




    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Λατινικά"
        android:id="@+id/checkBox"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Βιολογία"
        android:id="@+id/checkBox2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:checked="false"
        android:layout_below="@+id/checkBox"
        android:layout_alignRight="@+id/checkBox3"
        android:layout_alignEnd="@+id/checkBox3"
        android:layout_marginTop="24dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Μαθηματικά"
        android:id="@+id/checkBox3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:checked="false"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="4"
        android:id="@+id/vathmosArxaia"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/vathmosEkthesi"
        android:layout_alignStart="@+id/vathmosEkthesi"
        android:hint="0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="4"
        android:id="@+id/vathmosEkthesi"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox"
        android:hint="0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="4"
        android:id="@+id/vathmosIstoria"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/vathmosEkthesi"
        android:layout_alignStart="@+id/vathmosEkthesi"
        android:hint="0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="4"
        android:id="@+id/vathmosLatinika"
        android:layout_above="@+id/checkBox2"
        android:layout_toRightOf="@+id/checkBox2"
        android:layout_toEndOf="@+id/checkBox2"
        android:hint="0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="4"
        android:id="@+id/vathmosViologia"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_toRightOf="@+id/checkBox2"
        android:layout_toEndOf="@+id/checkBox2"
        android:hint="0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="4"
        android:id="@+id/vathmosMathimatika"
        android:layout_alignBottom="@+id/checkBox3"
        android:layout_alignLeft="@+id/vathmosViologia"
        android:layout_alignStart="@+id/vathmosViologia"
        android:hint="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Βαθμοί Μαθημάτων"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Υπολογισμος Μοριων"
        android:id="@+id/calcCredits"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:height="75dp"
        android:onClick="calcGrades"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/warningMessage"
        android:layout_below="@+id/checkBox3"
        android:layout_centerHorizontal="true"
        android:textColor="#f00"/>



</RelativeLayout>
